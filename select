SELECT 
 (COALESCE(A.ITE_ITEM_CURRENT_PRICE, 0) * COALESCE(cc.USD_RATIO, 0)) AS FILTRO_BT_LIVE_LISTING_CLASSI
 , ITE_ITEM_PERMALINK
 , TIM_DAY_TC
 , SIT_CURRENCY_ID
 , A.ITE_ITEM_CURRENT_PRICE
 , USD_RATIO
 , A.* EXCEPT(ITE_ITEM_CURRENT_PRICE,ITE_ITEM_PERMALINK,SIT_CURRENCY_ID,ITE_ITEM_SALES_TERMS, ITE_ITEM_RELATIONS, ITE_ITEM_ATTRIBUTES,ITE_ITEM_VARIATIONS)
 , CAT.CAT_CATEG_ID_L1
 , CAT.CAT_CATEG_ID_L2
 , CAT.CAT_CATEG_ID_L3
 , CAT.CAT_CATEG_ID_L4
 , CAT.CAT_CATEG_NAME_L1
 , CAT.CAT_CATEG_NAME_L2
 , CAT.CAT_CATEG_NAME_L3
 , CAT.CAT_CATEG_NAME_L4



FROM `meli-bi-data.WHOWNER.LK_ITE_ITEMS` AS A

LEFT JOIN `meli-bi-data.WHOWNER.AG_LK_CAT_CATEGORIES` AS CAT 
ON    CAT.CAT_CATEG_ID_L7 = CAST(A.CAT_CATEG_ID AS INTEGER)
  AND CAT.SIT_SITE_ID = A.SIT_SITE_ID

LEFT JOIN `meli-bi-data.WHOWNER.LK_CURRENCY_CONVERTION` cc
  ON cc.TIM_DAY_TC = CURRENT_DATE()
  AND cc.SIT_SITE_ID = A.SIT_SITE_ID

WHERE (ITE_ITEM_ACTIVED_FLG IS TRUE AND ITE_ITEM_STATUS = 'active') -- TRAER SOLO ANUNCIOS ACTIVOS
  AND IS_TEST IS FALSE -- NO TRAIGO ANUNCIOS TEST
  AND CAT.CAT_CATEG_ID_L1 IN (1743,1459)
  AND (COALESCE(A.ITE_ITEM_CURRENT_PRICE, 0) * COALESCE(cc.USD_RATIO, 0)) >= 10000 -- FILTRO EXISTENTE EN JOB BT_LIVE_LISTINGS_CLASSIFIEDS
